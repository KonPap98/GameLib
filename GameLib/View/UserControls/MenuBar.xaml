<UserControl x:Class="GameLib.View.UserControls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameLib.View.UserControls"
             mc:Ignorable="d" 
             Height="70"  d:DesignWidth="800">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Menu>
                <MenuItem Header="Menu" FontSize="16">
                    <MenuItem Header="Exit"/>
                </MenuItem>
            <MenuItem Header="Library" FontSize="16">
                <MenuItem Header="Add games" Click="AddGames_Click"/>
                <MenuItem Header="Search games"/>
            </MenuItem>
            <MenuItem Header="Export" FontSize="16">
                <MenuItem Header="Export library as text"/>
                <MenuItem Header="Export library as csv"/>
            </MenuItem>
            <MenuItem Header="Help" FontSize="16">
                <MenuItem Header="Help page..."/>
            </MenuItem>
        </Menu>
            <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
        </Grid>
        </Grid>
</UserControl>
